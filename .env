# BallBetz Model Configuration

# Default model provider (sklearn, ollama, openai)
BALLBETZ_DEFAULT_PROVIDER=ollama

# Enable fallback to alternative provider if primary fails (true/false)
BALLBETZ_ENABLE_FALLBACK=true

# Ollama configuration
OLLAMA_BASE_URL=http://localhost:10000
# No specific model set here - will be selected at runtime from available models
OLLAMA_TIMEOUT=30

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_PRIMARY_MODEL=o1-mini
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=30

# Common model parameters
MODEL_MAX_TOKENS=1024
MODEL_TEMPERATURE=0.0

# Retry configuration
MODEL_MAX_RETRIES=3
MODEL_RETRY_BACKOFF=2.0