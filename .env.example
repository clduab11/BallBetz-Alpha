# Flask Settings
FLASK_APP=app.py
FLASK_ENV=development  # Change to 'production' in production
FLASK_SECRET_KEY=your-secret-key-here  # Use a strong random key in production
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here  # Optional, defaults to SECRET_KEY
SESSION_LIFETIME=86400  # 24 hours in seconds

# Supabase Settings
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Security Settings
MIN_PASSWORD_LENGTH=12
BCRYPT_LOG_ROUNDS=12
PASSWORD_RESET_TIMEOUT=3600  # 1 hour in seconds
FAILED_LOGIN_TIMEOUT=900     # 15 minutes in seconds
MAX_LOGIN_ATTEMPTS=5

# SSL/TLS Settings (Production Only)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Default User Credentials (Development Only - DO NOT USE IN PRODUCTION)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=secure_admin_password_here
DEFAULT_ADMIN_EMAIL=admin@example.com

DEFAULT_PREMIUM_USERNAME=premium
DEFAULT_PREMIUM_PASSWORD=secure_premium_password_here
DEFAULT_PREMIUM_EMAIL=premium@example.com

DEFAULT_FREE_USERNAME=free
DEFAULT_FREE_PASSWORD=secure_free_password_here
DEFAULT_FREE_EMAIL=free@example.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ballbetz_diagnostics.log