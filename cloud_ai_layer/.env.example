# Cloud AI Layer Configuration

# External Factors Sources
EXTERNAL_WEATHER_SOURCE=https://api.weatherservice.com/v1/forecast
EXTERNAL_INJURIES_SOURCE=https://api.sportsdata.com/injuries
EXTERNAL_TEAM_STATS_SOURCE=https://api.sportsanalytics.com/team-stats

# API Security Configuration
# Comma-separated list of allowed domains for API calls
ALLOWED_API_DOMAINS=api.weatherservice.com,api.sportsdata.com,api.sportsanalytics.com
API_REQUEST_TIMEOUT=10
API_MAX_RETRIES=3

# Cross-League Pattern Analysis
CROSS_LEAGUE_SIMILARITY_THRESHOLD=0.7
MAX_HISTORICAL_PATTERNS=100

# Prediction Source Weights
ML_LAYER_WEIGHT=0.4
API_AI_LAYER_WEIGHT=0.3
EXTERNAL_FACTORS_WEIGHT=0.3

# Logging Configuration
CLOUD_AI_LOGGING_LEVEL=INFO
ENABLE_PREDICTION_EXPLANATIONS=True

# Caching Configuration
CLOUD_AI_CACHE_ENABLED=True
CLOUD_AI_CACHE_EXPIRATION=3600  # 1 hour in seconds

# Optional: Advanced Configuration
# Uncomment and modify as needed
# CUSTOM_EXTERNAL_FACTOR_SOURCES={"custom_source": "https://example.com/api"}
# PREDICTION_CONFIDENCE_THRESHOLD=0.5